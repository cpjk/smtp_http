<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below:</p>
      <ul>
        <%= for {attr, message} <- f.errors do %>
          <li><%= humanize(attr) %> <%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :data, "Data", class: "control-label" %>
    <%= text_input f, :data, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label f, :sender_email, "Sender email", class: "control-label" %>
    <%= text_input f, :sender_email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label f, :receiver_email, "Receiver email", class: "control-label" %>
    <%= text_input f, :receiver_email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
